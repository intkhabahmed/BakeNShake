<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="DetailActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="CardItemStyle" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/medium_spacing</item>
        <item name="android:layout_marginStart">@dimen/medium_spacing</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="ControlButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/control_button_width</item>
        <item name="android:layout_height">@dimen/control_button_height</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/large_spacing</item>
        <item name="android:layout_marginBottom">@dimen/xlarge_spacing</item>
        <item name="android:layout_marginStart">@dimen/large_spacing</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
    </style>

</resources>
